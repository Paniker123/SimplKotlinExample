<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="380dp"
    android:padding="@dimen/base"
    android:layout_gravity="center"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/findingImageView"
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/dislikeImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_like_down"
        app:layout_constraintTop_toBottomOf="@id/findingImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/likeImageView"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/likeImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_like_up"
        app:layout_constraintTop_toBottomOf="@id/findingImageView"
        app:layout_constraintStart_toEndOf="@id/dislikeImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>